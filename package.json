{
  "name": "hacker-news",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.5",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "simple-git-hooks",
    "predev:workflow": "npm run -s cf-typegen",
    "dev:workflow": "wrangler dev workflow/dev.ts",
    "opennext": "opennextjs-cloudflare",
    "preview": "npm run -s opennext && wrangler dev --env nextjs",
    "deploy": "npm run -s opennext && WRANGLER_BUILD_PLATFORM=node wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
  },
  "dependencies": {
    "@ai-sdk/openai-compatible": "^0.1.11",
    "@echristian/edge-tts": "^0.0.14",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@shadcn/ui": "^0.0.4",
    "ai": "^4.1.45",
    "cheerio": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fast-xml-parser": "^5.0.9",
    "lucide-react": "^0.475.0",
    "markdown-it": "^14.1.0",
    "next": "^15.1.7",
    "player.style": "^0.1.4",
    "podcast": "^2.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.3.0",
    "@ast-grep/napi-darwin-arm64": "^0.35.0",
    "@ast-grep/napi-linux-x64-gnu": "^0.35.0",
    "@cloudflare/workers-types": "^4.20250214.0",
    "@eslint-react/eslint-plugin": "^1.27.0",
    "@opennextjs/cloudflare": "^0.6.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.17.19",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "eslint": "^9.21.0",
    "eslint-config-next": "^15.1.7",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "lint-staged": "^15.4.3",
    "open-next": "^3.0.0",
    "postcss": "^8.5.3",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "wrangler": "^4.4.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "@opennextjs/cloudflare": "patches/@opennextjs__cloudflare.patch"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
